{
  "name": "smartparking_visual",
  "version": "1.0.0",
  "description": "SmartParking Visual is a development environment for SmartParking frontend developers",
  "main": "index.js",
  "watch": {
    "build": {
      "patterns": [
        "src/css",
        "src/js"
      ],
      "extensions": "css,js",
      "quiet": false
    }
  },
  "scripts": {
    "start": "nodemon index.js",
    "watch": "npm-watch build",
    "build": "npm run min-css && npm run build-js && npm run min-js-live && npm run min-js-history",
    "min-css": "uglifycss src/css/* > public/css/main.min.css",
    "build-js": "babel src/js --out-dir tmp --presets=es2015",
    "min-js-live": "uglifyjs ./tmp/util/requests.js ./tmp/live/* -mco ./public/js/live.min.js",
    "min-js-history": "uglifyjs ./tmp/util/requests.js ./tmp/history/* -mco ./public/js/history.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SmartParkingMaua/frontend.git"
  },
  "author": "Kaisen-san",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SmartParkingMaua/frontend/issues"
  },
  "homepage": "https://github.com/SmartParkingMaua/frontend#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "nodemon": "^1.18.9",
    "npm-watch": "^0.5.0",
    "uglify-js": "^3.4.9",
    "uglifycss": "0.0.29"
  },
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.4"
  }
}
